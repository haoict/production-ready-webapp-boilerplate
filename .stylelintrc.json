{
  "extends": "stylelint-config-recommended",
  "rules": {
    "block-no-empty": null,
    "color-no-invalid-hex": true,
    "comment-empty-line-before": [
      "always",
      {
        "ignore": ["stylelint-commands", "after-comment"]
      }
    ],
    "declaration-colon-space-after": "always",
    "indentation": [
      2,
      {
        "except": ["value"]
      }
    ],
    "max-empty-lines": 2,
    "unit-whitelist": ["em", "rem", "%", "s", "px", "vh", "fr"]
  }
}
